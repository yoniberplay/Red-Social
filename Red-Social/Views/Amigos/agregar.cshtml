@using Red_Social.Core.Application.ViewModels.Friendship;

@model SaveFriendViewModel
<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h4 style="text-align: center;">Registro de nuevo usuario</h4>
                </div>
                <div class="card-body">

                    
                    <form method="post" asp-controller="Amigos" asp-action="agregar">

                        <div class="mb-3">
                            <label asp-for="amigo" class="form-label">Nombre: </label>
                            <input asp-for="amigo" class="form-control" required />
                            <span asp-validation-for="amigo" class="text-danger"></span>
                        </div>

                         <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary">Agregar</button>
                        <a asp-controller="Amigos" asp-action="Index" class="btn btn-secondary">Volver atras</a>
                        </div>

                    </form>
                  



                </div>

            </div>
        </div>
    </div>

</div>