@using Red_Social.Core.Application.ViewModels.User;
@model ForgotPassViewModel
@{    
    ViewData["Title"] = "Forgot Password";    
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h4 style="text-align: center;">Recuperar Contraseña</h4>
                </div>
                <div class="card-body">

                
                    <form method="post" asp-controller="User" asp-action="Forgot">

                       

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Introduzca el usuario para reestablecer su contraseña: </label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        
                         <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary">Recuperar</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Volver atras</a>
                        </div>

                    </form>
                  



                </div>

            </div>
        </div>
    </div>

</div>

