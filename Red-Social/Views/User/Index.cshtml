@using Red_Social.Core.Application.ViewModels.User
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

  <div class="container py-5 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0 ">
            <div class="col-md-6 col-lg-5 d-none d-md-block ">
              <img src="Images\loggin.jpg" 
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" width="100%" height="100%" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                  
                <form method="post" asp-controller="User" asp-action="Index">

                  <div class="d-flex justify-content-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0" style="font-family: Garamond, serif; font-size:50px;">YonIMarket</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3"  style="text-align: center; font-family: Garamond, serif;">Inicia sesión para vender y comprar</h5>
                  @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                  <div class=" mb-4 text-center">
                      <i class="fa fa-user d-inline" style="font-size:24px; color:#0D6EFD; "></i>
                    <input class="form-control d-inline w-75" asp-for="Username" placeholder="Usuario">
                  </div>

                  <div class="text-center mb-4">
                      <i class="fa fa-key d-inline" style="font-size:24px; color:#0D6EFD;"></i>
                      <input class="form-control d-inline w-75" asp-for="Password" placeholder="Contraseña">    
                  </div>
                  
                  <div class="pt-1 mb-4 d-flex justify-content-center">
                    <button class="btn  btn-lg btn-block btn-primary me-2" type="submit">Iniciar sesión</button>
                    <a asp-controller="User" asp-action="Register" class="btn btn-lg btn-block btn-secondary  ms-2">Registrarme</a>
                  </div>
                  <div class="text-center">
                       <a asp-controller="User" asp-action="Forgot" class="link-primary">Olvido su contraseña?</a>
                  </div>

                  
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


